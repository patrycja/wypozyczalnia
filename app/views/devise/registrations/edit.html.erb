<h2>Edytuj profil <%= current_user.email %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <p><label for="imie">Imię</label>:<br/>
  <%= f.text_field :imie %></p>
  
  <p><label for="nazwisko">Nazwisko</label>:<br/>
  <%= f.text_field :nazwisko %></p>
  
  <p><label for="adres">Adres</label>:<br/>
  <%= f.text_area :adres, :rows => 3, :cols => 40 %></p>
  
  <p><label for="email">E-mail</label>:<br />
  <%= f.text_field :email %></p>
  
  <p><label for="password">Hasło <i>(zostaw puste, jeśli nie chcesz go zmieniać)</i></label>:<br />
  <%= f.password_field :password %></p>

  <p><label for="password_confirmation">Powtórz hasło</label>:<br />
  <%= f.password_field :password_confirmation %></p>

  <p><label for="current_password">Aktualne hasło <i>(potrzebujemy Twojego hasła, żeby zmienić dane)</i><br />
  <%= f.password_field :current_password %></p>
   
  -------------TEMP------------- <br />
  Admin?: <%= f.check_box :admin %> <br />
  Klient?: <%= f.check_box :klient %> <br />
  Recepcja? <%= f.check_box :recepcja %> <br />
  -------------TEMP-------------
  <p><%= f.submit "Edytuj profil" %></p>
<% end %>

<h3>Chcesz usunąć konto?</h3>

<p><%= link_to "Usuń moje konto", registration_path(resource_name), :confirm => "Jesteś pewien, że chcesz USUNĄĆ KONTO?", :method => :delete %></p><br/>

<%= link_to "Powrót", :back %>
